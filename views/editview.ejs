            <div class="form-title text-center">
                <h2 class="text-dark">Update Location</h2>

            </div>


            <form action="/location/edit/<%= locations._id %>" method="POST" id="update-location">
                <div class="new_user">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">

                            </div>
                            <div class="col-md-3" style="text-align: center;">
                                <label for="name" class="text"><strong>Name :</strong> </label>
                                <label type="text" name="id" value="<%= locations._id %>"></label>
                            </div>
