<!-- include header -->
<%- include('_header') %>
    <!-- /include header -->
    <br>
    <br><br><br>

    <body>
        <main id="site-main">
            <br><br><br><br>
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/display"><i class="fas fa-angle-double-left"></i> All Users</a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">Update Location</h2>
                    <span class="text-light">Use the below form to Update an account</span>
                </div>


                <form action="/location/edit/<%= locations._id %>" method="POST" id="update-location">
                    <div class="new_user">
                        <div class="form-group">
                            <%= JSON.stringify(locations) %>
                                <label for="name" class="text-light">Name</label>
                                <label type="text" name="id" value="<%= locations._id %>">
                            <input type="text" name="name" value="<%= locations.name %>" placeholder="Mark Stoenis">
                        </div>

                        <div class="form-group">
                            <label for="latitude" class="text-light">LATITUDE</label>
                                <input type="text" name="latitude" value="<%= locations.latitude %>" placeholder="example@gmail.com">
                        </div>
                        <div class="form-group">
                            <label for="longitude" class="text-light">LONGITUDE</label>
                            <input type="text" name="longitude" value="<%= locations.longitude %>" placeholder="example@gmail.com">
                        </div>




                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>
                        </div>

                    </div>
                </form>

            </div>
        </main>
        <script type="module " src="./scripts/main.js ">
            console.log('
            <%= locations %>'');


        </script>
    </body>
